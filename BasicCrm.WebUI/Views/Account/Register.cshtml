@model RegisterModel

<div class="container">

    <div class="row justify-content-center ">
        <div class="col-md-6">
            <div class="card">
                <header class="card-header">
                    <a asp-controller="Account" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Giriş</a>
                    <h4 class="card-title mt-2">Kayıt Ol</h4>
                </header>
                <article class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="form-row">
                            <div class="col form-group">
                                <label asp-for="@Model.Name"></label>
                                <input type="text" class="form-control" asp-for="Name" value="@Model.Name" required="required">
                            </div> <!-- form-group end.// -->
                            <div class="col form-group">
                                <label asp-for="@Model.Surname"></label>
                                <input type="text" class="form-control" asp-for="Surname" value="@Model.Surname" required="required">
                            </div> <!-- form-group end.// -->
                        </div> <!-- form-row end.// -->
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input type="email" class="form-control" asp-for="Email" value="@Model.Email" required="required">
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label asp-for="@Model.UserName"></label>
                            <input type="text" class="form-control" asp-for="UserName" value="@Model.UserName" required="required">
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label asp-for="@Model.Phone"></label>
                            <input type="text" class="form-control" asp-for="Phone" value="@Model.Phone" required="required">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Password"></label>
                                <input type="password" class="form-control" asp-for="Password" value="@Model.Password" required="required">
                            </div> <!-- form-group end.// -->
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.RePassword"></label>
                                <input type="password" class="form-control" asp-for="RePassword" value="@Model.RePassword" required="required">
                            </div> <!-- form-group end.// -->

                        </div> <!-- form-row.// -->
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                        </div> <!-- form-group// -->

                    </form>
                </article> <!-- card-body end .// -->
                <div class="border-top card-body text-center">Hesabınız var mı? <a asp-controller="Account" asp-action="Login">Giriş Yap</a></div>
            </div> <!-- card.// -->
        </div> <!-- col.//-->

    </div> <!-- row.//-->


</div>
<!--container end.//-->
